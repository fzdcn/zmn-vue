px2rem($px)
  $rem = 100px
  $px/$rem rem

textMaxLine($line = 1)
  overflow hidden
  text-overflow ellipsis
  display box
  display -webkit-box
  line-clamp $line
  -webkit-line-clamp $line
  -webkit-box-orient vertical

img-center(direction = 'vertical')
  position relative
  overflow hidden
  img
    position absolute
    if direction == 'horizon'
      height 100%
      left 50%
      transform translate(-50%)
    if direction == 'vertical'
      width 100%
      top 50%
      transform translateY(-50%)
    if direction == 'all'
      /* 需要限制宽高，将自适应宽高并且等比例缩放 */
      left 50%
      top 50%
      transform translate(-50%, -50%)

